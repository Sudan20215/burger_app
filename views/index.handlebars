<header>
  <h1 class="text-center mt-4 mb-4">Eat-Da-Burger</h1>
</header>
<div class="row">
  <div class="col-md-4">
    <div class="card">
        <h5>Your Burgers!</h5>
      <ul class="list-group list-group-flush">
        {{#each burgers}}
        {{#unless devoured}}
        <li class="list-group-item">{{> burgers/burger-block devoured=true}}</li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div id="inputDiv" class="col-md-4">
      <img src="./assets/burger.png" class="card-img-top" height="300" width="100" alt="burger">
      <form class="create-form">
        <div class="input-group">
          <div class="col">
            <textarea type="text" id="Burg" class="form-control" placeholder="Enter Burger Name"></textarea>
          </div>
        </div>
        <div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
      </form> 
      <h4 class="mt-2 text-dark text-center">Enter the burger you want to eat and click submit </h4>
  </div>
  <div class="col-md-4">
    <div class="card">
        <h5>Devoured Burgers!</h5>
      <ul class="list-group list-group-flush">
        {{#each burgers}}
        {{#if devoured}}
        <li class="list-group-item">{{> burgers/burger-block devoured=false}}</li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
</div>